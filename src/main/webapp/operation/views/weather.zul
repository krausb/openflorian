<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?link rel="icon" type="image/x-icon" href="/includes/img/icon/favicon.ico"?>
<zk xmlns:h="http://www.w3.org/1999/xhtml">
	<div id="weatherView" 
        apply="de.openflorian.ui.viewport.WeatherViewController" 
        width="100%" height="100%">
        
        <h:h1>${c:l('operation.weather.title')}</h:h1>
        
        <grid width="500px">
            <columns>
                <column width="150px" />
                <column />
            </columns>
            <rows>
                <row>
                    <label value=" " />
                    <label id="weather"/>
                </row>
                <row>
                    <label value="${c:l('operation.weather.currentTime')}" />
                    <label id="currentTime" value=""/>
                </row>
                <row>
                    <label value="${c:l('operation.weather.temperature')}" />
                    <label id="temperature" value="" />
                </row>
                <row>
                    <label value="${c:l('operation.weather.condition')}" />
                    <label id="condition" value="" />
                </row>
                <row>
                    <label value="${c:l('operation.weather.humidity')}" />
                    <label id="humidity" value="" />
                </row>
                <row>
                    <label value="${c:l('operation.weather.pressure')}" />
                    <hbox>
                    	<label id="pressure" value="" />
                    	<image id="rising" width="16px" height="16px"/>
                    </hbox>
                </row>
                <row>
                    <label value="${c:l('operation.weather.visibility')}" />
                    <label id="visibility" value="" />
                </row>
                <row>
                    <label value="${c:l('operation.weather.windspeed')}" />
                    <label id="windSpeed" value="" />
                </row>
                <row>
                    <label value="${c:l('operation.weather.winddirection')}" />
                    <label id="windDirection" value="" />
                </row>
                <row>
                    <label value="${c:l('operation.weather.windchill')}" />
                    <label id="windChill" value="" />
                </row>
			</rows>
		</grid>
        <timer id="refreshTimer" delay="15000" repeats="true"/>
	</div>
</zk>