<?page it="targetSales" title="Zielvorgabe" contentType="text/html;charset=UTF-8"?>
<zk>

	<style>
		.z-combo-item-text { font-size : 20px; }

		span.font { font-size : 20px; }
	</style>

	<window id="win"
		apply="de.pogosystems.work.ui.controlling.TargetSalesRegistrationController" position="center" >

		<vbox width="800px" align="center">

			<hlayout>
				<combobox id="brandSelection" width="210px" />
				<combobox id="branchSelection" width="210px" />
				<combobox id="yearSelection" width="80px" />

			</hlayout>

			<label id="branchName" sclass="font" />

			<hlayout>
				<label value="${c:l('controlling.table.targetsale.titel')}" sclass="font" />

				<intbox id="yearValue" constraint="no negative,no empty" format="#,###" />

			</hlayout>

			<hlayout>

				<listbox id="listBox" hflex="1" width="300px">
					<listhead>
						<listheader align="center" label="${c:l('controlling.table.header.month')}" />
						<listheader align="right" label="${c:l('controlling.table.header.targetsale')}" />
						<listheader align="right" label="${c:l('controlling.table.header.tagetkey')}" />
					</listhead>
					<listfoot>
						<listfooter label="${c:l('controlling.table.footer.sum')}" />
						<listfooter id="sumValue" />
						<listfooter id="sumKey" />
					</listfoot>
				</listbox>

				<listbox id="listBox2" hflex="1" width="200px">
					<listhead>
						<listheader align="left" label="${c:l('controlling.table.header.sales')}" />
						<listheader align="right" label="${c:l('controlling.table.header.tagetkey')}" />
					</listhead>
					<listfoot>
					<listfooter label="${c:l('controlling.table.footer.sum')}" />
					</listfoot>
				</listbox>

			</hlayout>

			<hlayout>
			<button id="saveButton"
				label="${c:l('global.button.save')}" />
				
			<button id="takeOverKeys" label="${c:l('controlling.button.apply')}" />
			 
			</hlayout>
			
		</vbox>
	</window>


</zk>