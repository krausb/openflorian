<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd    
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd  
    http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.xsd">

	<context:component-scan base-package="de.openflorian.media" />
	<context:annotation-config />

	<bean id="mediaItemRestPersistenceProxyFactory" class="de.openflorian.media.ws.MediaItemRestPersistenceProxyFactory"/>

    <bean id="mediaManager" class="de.openflorian.media.DefaultMediaManager">
    	<property name="mediaItemFileSystemManager" ref="mediaItemFileSystemManager"/>
    	<property name="mediaItemPersistenceManager" ref="mediaItemPersistenceManager"/>
    </bean>
    
    <bean id="mediaItemFileSystemManager" class="de.openflorian.media.MediaItemFileSystemManager"/>
    <bean id="mediaItemPersistenceManager" class="de.openflorian.media.MediaItemPersistenceManager">
    	<property name="mediaItemPersistenceProxyFactory" ref="mediaItemRestPersistenceProxyFactory"/>
    </bean>
    
    <bean id="mediaItemService" class="de.openflorian.service.MediaItemService" />
	<bean id="mediaItemDao" class="de.openflorian.data.dao.media.MediaItemDao" />

</beans>